{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "watch": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "tests/**/*.ts"
  ]
}
